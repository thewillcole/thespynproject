<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout android:orientation="vertical"
		android:background="@color/color1" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_weight="1"><!-- split-screen -->
		
		<!-- VIEW, EDIT, CREATE -->
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:layout_weight="1">

			<LinearLayout android:orientation="horizontal"
				android:layout_width="fill_parent" android:background="@color/color3"
				android:layout_height="fill_parent" android:layout_weight="1">
				<!-- CREATE -->
				<Button android:id="@+id/button_create"
					android:layout_width="fill_parent" android:text="create new memory"
					android:layout_height="wrap_content" />
			</LinearLayout>
			<LinearLayout android:orientation="horizontal"
				android:layout_width="fill_parent" android:background="@color/color2"
				android:layout_height="fill_parent" android:layout_weight="1">
				<!-- VIEW -->
				<Button android:id="@+id/button_view" 
					android:layout_width="fill_parent" android:text="view memories"
					android:layout_height="wrap_content" />
			</LinearLayout>
			<LinearLayout android:orientation="horizontal"
				android:layout_width="fill_parent" android:background="@color/color1"
				android:layout_height="fill_parent" android:layout_weight="1">
				<!-- EDIT -->
				<Button android:id="@+id/button_edit" 
					android:layout_width="fill_parent" android:text="edit memories"
					android:layout_height="wrap_content" />
			</LinearLayout>
		</LinearLayout>

		<!-- SCAN and MAP -->
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:background="#aa0000"
			android:layout_height="fill_parent" android:layout_weight="1">
			<!-- Scan -->
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:layout_weight="1">
				<Button android:id="@+id/button_scan" 
					android:layout_width="fill_parent" android:text="Scan for memories"
					android:layout_height="fill_parent" />
			</LinearLayout>
			<!-- MAP -->
			<LinearLayout android:layout_width="fill_parent" android:background="#00aa00"
				android:layout_height="fill_parent" android:layout_weight="1">
				<Button android:id="@+id/button_map" 
					android:layout_width="fill_parent" android:text="Map of memories"
					android:layout_height="fill_parent" />
			</LinearLayout>
		</LinearLayout>

	</LinearLayout>

	<LinearLayout android:orientation="vertical"
		android:background="@color/color2" android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_weight="1">
		<ListView android:id="@+id/android:list"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<TextView android:id="@+id/android:empty"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="No Notes!" />
	</LinearLayout>

</LinearLayout>